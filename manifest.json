{
    "manifest_version": 3,
    "name": "Promptly.",
    "version": "1.0",
    "description": "Send your queries to Promptly with multiple refined prompt modes (Concise, Detailed, Math, etc.)",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["activeTab", "scripting","https://promptly-orcin.vercel.app/*"],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  